input.special {
    border: none;
    margin: 0;
    padding: 0;
}

.footer {
    position: fixed;
    bottom: 0px;left: 0px;right: 0px;
    height: 80px;
    background-color: #fff;
    border-top: 1px solid #ddd;
    padding: 0px 50px;
    z-index: 2;
}
.footer button {
    height: 50px;
    padding: 0px;
    padding: 0px 50px;
}
.footer .footer-info h3 {
    font-size: 16px;
    margin-bottom: 6px;
}
.footer .footer-info p {
    font-size: 14px;
}

.content {
    position: absolute;
    top: 80px;left: 100px;right: 100px;
    padding-bottom: 100px;
}

