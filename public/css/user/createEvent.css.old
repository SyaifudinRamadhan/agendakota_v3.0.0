.separator-area {
    background-color: #ddd;
    width: 100%;
    height: 1px;
    margin-top: 20px;
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: center;
}
.separator-area .separator-text {
    background-color: #fff;
    padding: 5px 20px;
    position: absolute;
    top: -13px;
    font-size: 13px;
    color: #666;
}

.social-login-button {
    border: 1px solid var(--primary);
    padding: 10px;
    border-radius: 7px;
    color: var(--primary);
    cursor: pointer;
}
.social-login-button img {
    width: 25px;
    height: 25px;
    object-fit: cover;
    margin-right: 10px;
}
.social-login-button:hover {
    background-color: var(--primaryTransparent);
    border-color: var(--primaryTransparent);
}

.otp-input {
    width: 50px;
    border: 1px solid #ddd;
    border-radius: 10px;
    margin: 0px 10px;
    padding: 0px;
    text-align: center;
}

.ticket {
    width: 400px;
    border: 1px solid #ddd;
    border-radius: 8px;
    height: 150px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
    margin: 0px 10px;
    cursor: pointer;
}
.HalfCircle {
    width: 50px;
    height: 25px;
    background-color: #fff;
    border-top-left-radius: 35px;
    border-top-right-radius: 35px; /* 100px of height + 10px of border */
    border: 1px solid #ddd;
    border-bottom: 0;
}
.ticket .LeftCircle {
    margin-left: -13.5px;
    transform: rotate(90deg);
}
.ticket .TopCircle {
    width: 20px;
    height: 10px;
    position: absolute;
    top: -1px;left: 100px;
    transform: rotate(180deg);
}
.ticket .BottomCircle {
    width: 20px;
    height: 10px;
    position: absolute;
    bottom: -1px;left: 100px;
}
.ticket .barcode {
    position: absolute;
    left: 50px;
    padding-right: 30px;
    border-right: 2px dashed #ddd;
}
.ticket .barcode-line {
    background-color: #ddd;
    width: 30px;
    height: 3px;
    margin-bottom: 2px;
}
.ticket .barcode-line.bold {
    height: 5px;
}
.ticket .detail {
    position: absolute;
    left: 135px;right: 20px;
    top: 40px;
}
.ticket .outer-add {
    background-color: #ddd;
    width: 75px;
    height: 75px;
    border-radius: 99px;
}
.ticket .add-button {
    width: 65px;
    height: 65px;
    border: 5px solid #ccc;
    background-color: #fff;
}
.ticket:hover {
    background-color: var(--primary);
    color: #fff;
    border-color: var(--primary);
}
.ticket:hover .muted { color: #fff; }
.ticket:hover .add-button {
    color: var(--primary);
}

.event-type-item {
    width: 25%;
    color: #444;
}
.event-type-item img {
    height: 50px;
    margin-right: 20px;
}
.event-type-item.active {
    background-color: var(--primary);
    color: #fff;
    border-color: var(--primary);
    font-weight: 700;
}

#UploadArea {
    background-color: #ecf0f1;
    height: 250px;
    width: 100%;
    border-radius: 8px;
}
input#EventTitle {
    border: none;
    color: var(--primary);
    font-size: 32px;
    font-weight: 800;
    padding: 0px;
}
input#EventTitle::placeholder {
    color: var(--primaryTransparent);
}
#EventDescription {
    border: none;
    padding: 0px;
    line-height: 150%;
}
.BoxInput {
    width: 350px;
}

.execution_type.active {
    background-color: var(--primary);
    color: #fff;
}

.breakdown-item {
    flex-basis: 48%;
    cursor: pointer;
}
.breakdown-item i {
    font-size: 42px;
    color: #aaa;
}
.breakdown-item.active {
    background-color: var(--primaryTransparent);
    color: var(--primary);
    border-color: var(--primary);
}
.breakdown-item.active i { color: var(--primary); }

.TicketDisplay {
    border: 1px solid #ddd;
    height: auto;
    width: 350px;
    position: relative;
    padding: 20px 45px;
    border-radius: 10px;
}
.TicketDisplay .HalfCircle {
    position: absolute;
    top: 58px;
}
.TicketDisplay .LeftCircle {
    left: -14px;
    transform: rotate(90deg);
}
.TicketDisplay .RightCircle {
    right: -14px;
    transform: rotate(270deg);
}
.TicketDisplay .info {
    border-bottom: 1px dashed #ddd;
    padding-bottom: 20px;
}

.QuantityControl {
    height: 53px;
    width: 53px;
    padding: 0px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    margin-top: 23px;
}